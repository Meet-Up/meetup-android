<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuvistavie.meetup"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:name="com.tuvistavie.meetup.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tuvistavie.meetup.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tuvistavie.meetup.auth.activity.CheckMailActivity"
            android:label="CheckMail" />
        <activity
            android:name="com.tuvistavie.meetup.auth.activity.EnterPinActivity"
            android:label="ConfirmMail" />
        <activity
            android:name="com.tuvistavie.meetup.event.activity.CreateEventActivity"
            android:label="@string/title_activity_create_event" >
        </activity>
        <activity
            android:name="com.tuvistavie.meetup.event.activity.TimeLineActivity"
            android:label="@string/title_activity_timeline" >
        </activity>
        <activity
            android:name=".event.activity.SelectDateActivity"
            android:label="@string/title_activity_select_date" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

</manifest>
