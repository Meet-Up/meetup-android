<resources>

    <style name="AppTheme" parent="@android:Theme.WithActionBar">
        <item name="android:background">#ffffff</item>
        <item name="android:textViewStyle">@style/TextViewTheme</item>
    </style>

    <style name="TextViewTheme" parent="@android:Widget.TextView">
        <item name="android:textAppearance">@style/TextTheme</item>
    </style>

    <style name="TextTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LargeTextTheme" parent="@style/TextTheme">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
